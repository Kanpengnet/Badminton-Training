<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout tools:context="kbu.sineepun.kanpengnet.badmintontraining.CheckScore"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout"
            android:background="@color/button_material_light" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView21"
                android:layout_weight="1"
                android:src="@drawable/manicon"
                android:background="@color/common_plus_signin_btn_text_light_disabled" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView22"
                android:layout_weight="1"
                android:src="@drawable/man2icon"
                android:background="lor/" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView23"
                android:layout_weight="1"
                android:src="@drawable/undo"
                android:background="@color/common_plus_signin_btn_text_light_disabled" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView24"
                android:layout_weight="1"
                android:src="@drawable/reset" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"
            android:background="@drawable/bg_score_02" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView25"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView26"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView27"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textView22"
                android:textSize="@dimen/h1"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/imageView25"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textView23"
                android:textSize="@dimen/h1"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/imageView25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:textSize="@dimen/h1"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_above="@+id/imageView25"
                android:layout_marginBottom="130dp"
                android:layout_marginLeft="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:textSize="@dimen/h1"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_above="@+id/imageView25"
                android:layout_marginBottom="130dp"
                android:layout_marginLeft="230dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:textSize="@dimen/h1"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_marginTop="130dp"
                android:layout_below="@+id/imageView25"
                android:layout_marginLeft="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:textSize="@dimen/h1"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_marginTop="130dp"
                android:layout_below="@+id/imageView25"
                android:layout_marginLeft="230dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>